<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl11517192933.costin.TotalFragment">

    <RelativeLayout
        android:id="@+id/fragmenttotal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editTextgaji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:inputType="numberSigned"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26dp" />

        </LinearLayout>


        <ImageView
        android:id="@+id/gambartotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@drawable/total" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambartotal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total Uang Anda : "
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSimpangaji"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bgbtn"
            android:text="Simpan Pemasukan"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/spinnerPilih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonSimpangaji"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="98dp"
            android:background="?attr/colorButtonNormal"
            android:entries="@array/pilih"
            android:paddingTop="50dp"
            android:popupBackground="@color/dot_light_screen4" />

        <TextView
            android:id="@+id/textViewRpjumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/gambartotal"
            android:layout_toStartOf="@+id/gambartotal"
            android:layout_weight="0.13"
            android:paddingTop="30dp"
            android:text="Rp."
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp" />

    </RelativeLayout>
</RelativeLayout>


